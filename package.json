{
  "name": "smart-mirror",
  "version": "0.0.32",
  "description": "The fairest of them all",
  "main": "main.js",
  "scripts": {
    "install1": "bower install",
    "start": "DISPLAY=\"${DISPLAY:=:0}\" electron --disable_gpu main.js $@",
    "train-model": "electron scripts/train-model.js",
    "sonus": "node sonus.js",
    "motion": "sudo node motion.js",
    "enable-motion": "npm install johnny-five raspi-io",
    "update": "git pull && npm install",
    "wiredep": "wiredep -s index.html",
    "test": "eslint . --ignore-path .gitignore",
    "test-fix": "eslint . --ignore-path .gitignore --fix",
    "postinstall": "bash scripts/copyjsonform",
    "preinstall": "bash scripts/installcblas"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdetweil/smart-mirror.git"
  },
  "keywords": [
    "Smart Mirror",
    "IoT",
    "Voice Control",
    "DIY"
  ],
  "author": "Evan Cohen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sdetweil/smart-mirror/issues"
  },
  "devDependencies": {
    "eslint": "^6.8.0"
  },
  "dependencies": {
    "@electron/rebuild": "github:electron/rebuild",
    "@electron/remote": "^2.0.12",
    "@fortawesome/fontawesome-free": "^6.2.0",
    "@google-cloud/speech": "^4.2.0",
    "@grpc/grpc-js": "^1.2.11",
    "alphavantage": "^2.5.0",
    "angular": "^1.8.3",
    "angular-animate": "^1.8.3",
    "angular-dynamic-locale": "^0.1.38",
    "angular-i18n": "^1.8.2",
    "angular-moment": "^1.3.0",
    "angular-sanitize": "1.8.3",
    "angular-translate": "^2.19.1",
    "angular-translate-loader-static-files": "^2.19.1",
    "annyang": "^2.6.1",
    "cheerio": "^1.0.0-rc.5",
    "electron": "^31.1.0",
    "electron-json-storage": "^4.4.0",
    "express": "^4.17.1",
    "fitbit-oauth2": "0.0.1",
    "humanize-duration": "^3.25.1",
    "hyperion-client": "1.0.3",
    "ip": "^2.0.1",
    "jsonform": "git+https://git@github.com/jsonform/jsonform.git",
    "moment": "^2.29.1",
    "mqtt": "^5.3.5",
    "pretty-ms": "^7.0.1",
    "recorder": "git+https://git@github.com/sdetweil/recorder.git",
    "rrule": "^2.1.0",
    "rss-parser": "^3.12.0",
    "skycons": "github:darkskyapp/skycons",
    "socket.io": "2.3.0",
    "sonus": "git+https://git@github.com/sdetweil/sonus.git",
    "spotify-web-api-node": "^5.0.0",
    "waitprocess": "git+https://github.com/sdetweil/waitprocess.git",
    "winston": "^3.3.3",
    "wiredep-cli": "^0.1.0",
    "youtube-api": "^3.0.1"
  },
  "overrides": {
    "moment": {
      "main": "min/moment-with-locales.js"
    },
    "rrule": {
      "main": "node_modules/rrule/dist/es5/rrule.js"
    },
    "skycons": {
      "main": "./skycons.js"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "rules": {
      "no-console": 0
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "globals": {
      "angular": false,
      "annyang": false,
      "moment": false,
      "config": false,
      "RRule": true
    }
  }
}
