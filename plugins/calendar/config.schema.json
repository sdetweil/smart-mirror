{
    "schema": {
        "calendar": {
            "type": "object",
            "title": "{{title}}",
            "properties": {
                "icals": {
                    "type": "array",
                    "title": "{{URLs}}",
                    "items": {
                        "type": "string"
                    }
                },
                "maxResults": {
                    "type": "integer",
                    "title": "{{maxevents}}",
                    "default": 9
                },
                "maxDays": {
                    "type": "integer",
                    "title": "{{maxdays}}",
                    "default": 9
                },
                "showCalendarNames": {
                    "type": "boolean",
                    "title": "{{showCalendarNames}}",
                    "default": false
                },
                "refreshInterval":{
                    "type":"integer",
                    "title":"{{refeshInterval}}",
                    "default":30,
                    "enum":[
                        15,
                        30,
                        45,
                        60
                    ]
                }
            }
        }
    },
    "form":[
      {
        "title": "{{title}}",
        "type": "fieldset",
        "expandable": true,
        "order":0,
        "items":[
          {
            "type":"tabarray",
            "title":"{{URLs}}",
            "items":[
              {
                "type":"section",
                "legend":"iCal {{idx}}",
                "items":[
                    {
                    "key":"calendar.icals[]",
                    "type":"textarea"
                    }
                ]
              }
            ]
          },
         "calendar.maxResults",
         "calendar.maxDays",
         "calendar.showCalendarNames",
         "calendar.refreshInterval"
        ]
      }
    ],
    "value":{
      "calendar": {
        "maxResults": 9,
        "maxDays": 9,
        "showCalendarNames": false
      }
    }
}